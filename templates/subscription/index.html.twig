{% extends 'base.html.twig' %}

{% block title %}Subscription index{% endblock %}

{% block body %}
    <h1>Subscription index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>SubsDate</th>
                <th>ValidationState</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for subscription in subscriptions %}
            <tr>
                <td>{{ subscription.id }}</td>
                <td>{{ subscription.subsDate ? subscription.subsDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ subscription.validationState ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('subscription_show', {'id': subscription.id}) }}">show</a>
                    <a href="{{ path('subscription_edit', {'id': subscription.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('subscription_new') }}">Create new</a>
{% endblock %}
