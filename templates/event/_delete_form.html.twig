<form method="post" action="{{ path('event_delete', {'id': event.id}) }}" onsubmit="return confirm('Etes-vous sûr(e) de vouloir supprimer cet entraînement ?');">
  <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
  <div class="row">
    <div class="ml-auto">
      <button class="btn btn-danger mt-3 mr-3">Supprimer
        <i class="fas fa-trash-alt"></i>
      </button>
    </div>
  </div>
</form>
