{% extends 'admin-base.html.twig' %}

{% block title %}MX Park | Admin | Liste Entraînement{% endblock %}

{% block body %}
  {# <div class="container"> #}
    <div class="row">
      <div class="col-12 col-lg-10 mx-auto">
        <div class="d-flex  mt-4 mb-2">
          <h1 class="h2">Liste des entraînements</h1>
          <p class="ml-auto">
            <a class="btn btn-success" href="{{ path('event_new') }}">Nouvelle session</a>
          </p>
        </div>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Date</th>
              <th>Nom</th>
              <th>Type</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            {% for event in events %}
              <tr>
                <td>{{ event.date ? event.date|date('d/m/Y H:i:s') : '' }}</td>
                <td>{{ event.name }}</td>
                <td>{{ event.type ? 'Adulte' : 'Kids' }} </td>
                <td>
                  <a class="btn btn-primary btn-sm" href="{{ path('event_show', {'id': event.id}) }}">
                    <i class="fas fa-info-circle"></i>
                  </a>
                  <a class="btn btn-warning btn-sm" href="{{ path('event_edit', {'id': event.id}) }}">
                    <i class="far fa-edit"></i>
                  </a>
                </td>
              </tr>
            {% else %}
              <tr>
                <td colspan="4">no records found</td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  {# </div> #}
{% endblock %}
