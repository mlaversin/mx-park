{% extends 'base.html.twig' %}

{% block title %}MX Park | Modifier mes informations{% endblock %}

{% block body %}
  <div class="container my-5">
    <div class="row">
      <div class="col-8 mx-auto">
          <div class="row mt-4">
            <div class="col-10">
              <h1 class="h2 ml-5">Modification du profil de {{ user.firstName }} {{ user.lastName }} </h1>
            </div>
            <div class="col-2">
              <p class="ml-auto mt-2">
                <a class="btn btn-primary" href="{{ path('profil_show', { 'id': user.id }) }}">
                  <i class="fas fa-arrow-circle-left"></i>
                </a>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>

      {# ------------------------------ Form ------------------------------------ #}

    <div class="row mb-5">
      <div class="col-4 mx-auto">
        {{ include('user/_form.html.twig', {'button_label': 'Update'}) }}
        {{ include('user/_delete_form.html.twig') }}
      </div>
    </div>

  </div>


{% endblock %}